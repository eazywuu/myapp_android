<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PracticeActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/practice_vp2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints" >

    </androidx.viewpager2.widget.ViewPager2>

    <ImageButton
        android:id="@+id/imageButton2"
        android:onClick="pause"
        android:layout_width="56dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape4"
        app:srcCompat="@drawable/ic_baseline_pause_24" />

    <com.wyz.my123.ProgressButton
        android:id="@+id/button_pb1"
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:background="@color/color_01"
        app:layout_constraintStart_toStartOf="@+id/button_one"
        app:layout_constraintTop_toTopOf="@+id/button_one" />

    <Button
        android:id="@+id/button_one"
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:text="1"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@drawable/shape11"
        app:layout_constraintBottom_toTopOf="@+id/button_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.wyz.my123.ProgressButton
        android:id="@+id/button_pb2"
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:background="@color/color_01"
        app:layout_constraintStart_toStartOf="@+id/button_two"
        app:layout_constraintTop_toTopOf="@+id/button_two" />

    <Button
        android:id="@+id/button_two"
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:text="2"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@drawable/shape11"
        app:layout_constraintBottom_toTopOf="@+id/button_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.wyz.my123.ProgressButton
        android:id="@+id/button_pb3"
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:background="@color/color_01"
        app:layout_constraintStart_toStartOf="@+id/button_three"
        app:layout_constraintTop_toTopOf="@+id/button_three" />

    <Button
        android:id="@+id/button_three"
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/shape11"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




    <TextView
        android:id="@+id/textView_count"
        android:layout_width="50dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/score"
        android:gravity="center"
        android:text="0"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>