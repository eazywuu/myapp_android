<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--列表-->
    <ListView
        android:id="@+id/lv"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape2"></ListView>

    <!--返回图标的边框-->
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_baseline_keyboard_backspace_24" />

    <!--返回的图标-->
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/shape4" />

    <!--总答题数-->
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/shape3"
        android:gravity="center"
        android:text="总答题数"
        android:textSize="15sp" />

    <!--今日答题数-->
    <TextView
        android:id="@+id/tv_4"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="165dp"
        android:background="@drawable/shape2"
        android:gravity="center"
        android:text="今日答题数"
        android:textSize="20sp" />

    <!--皇冠组件-->
    <TextView
        android:layout_width="229dp"
        android:layout_height="241dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="91dp"
        android:background="@drawable/huang" />


    <!--排行榜标题-->
    <TextView
        android:layout_width="229dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="94dp"
        android:background="@drawable/phb2" />

    <!--当前用户排名情况-->
    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="-6dp"
        android:background="@drawable/shape7">

        <TextView
            android:id="@+id/tv"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:text="wyz"
            android:autoSizeMaxTextSize="48sp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:shadowRadius="30"
            android:textSize="25dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="247dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="总题数: "
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:textSize="15sp" />

        <!--答题数-->
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="318dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="-19dp"
            android:text="10"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="77dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_circle" />

        <!--名次-->
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="未上榜"
            android:textColor="@color/color_03"
            android:textSize="20sp" />

    </RelativeLayout>


</RelativeLayout>